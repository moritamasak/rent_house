<p id="notice"><%= notice %></p>
<h1>閲覧</h1>
<p>
  <strong>物件名</strong>
  <%= @property.property_name %>
</p>
<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>
<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>
<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>
<p>
  <strong>備考:</strong>
  <%= @property.note %>
</p>

<% @nearest_stations.each_with_index do |nearest_station, i| %>
  <h3>
    最寄り駅
    <%= i + 1 %>
  </h3>

  <% if @property.nearest_stations.any? %>
  <p>
    <strong>路線名</strong>
    <%= nearest_station.track_name %><br>
  </p>
  <p>
    <strong>最寄り駅</strong>
    <%= nearest_station.station_name %>駅<br>
  </p>
  <p>
    <strong>徒歩分数</strong>
    <%= nearest_station.time %>分<br>
  </p>
  <% end %>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '一覧へ', properties_path %>
