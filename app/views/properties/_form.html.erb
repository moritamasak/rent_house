<%= form_with(model: property, local: true) do |form| %>
    <% if property.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

        <ul>
          <% property.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :物件名%>
      <%= form.text_field :property_name %>
    </div>
    <div class="field">
      <%= form.label :賃料 %>
      <%= form.number_field :rent %>円<br>
    </div>
    <div class="field">
      <%= form.label :住所 %>
      <%= form.text_field :address %>
    </div>
    <div class="field">
      <%= form.label :築年数 %>
      <%= form.number_field :age %>
    </div>
    <div class="field">
      <%= form.label :備考 %>
      <%= form.text_area :note %>
    </div>

    <%= form.fields_for :nearest_stations do |nearest_station| %>
      <h3>
        最寄り駅
        <%= nearest_station.index + 1 %>
      </h3>
      <div class="track_name">
        <%= nearest_station.label :路線名%><br>
        <%= nearest_station.text_field :track_name %>
      </div>
      <div class="station_name">
        <%= nearest_station.label :駅名%><br>
        <%= nearest_station.text_field :station_name %>駅<br>
      </div>
      <div class="time">
        <%= nearest_station.label :徒歩分数%><br>
        <%= nearest_station.text_field :time %>分<br>
      </div>
    <% end %>
    <div class="actions">
      <%= form.submit '登録する'%>
    </div>
<% end %>
